<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cal_calendar_text"
        />

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/cal_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/cal_add_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cal_calendar_text"
        app:mcv_tileHeight="35dp" />

    <Button
        android:id="@+id/cal_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cal_calendar_view"
        app:layout_constraintBottom_toTopOf="@id/cal_birthday_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Birthdays"
        android:id="@+id/cal_birthday_text"
        app:layout_constraintTop_toBottomOf="@id/cal_add_btn"
        app:layout_constraintBottom_toTopOf="@id/cal_recycler_view"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cal_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cal_birthday_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>