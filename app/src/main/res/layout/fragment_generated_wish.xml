<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#676570">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/gen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:text="@string/PW_title"
            android:textColor="#EEEEEE"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/ready_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/PW_ready"
            android:textColor="#EEEEEE"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gen_title"
            />

        <TextView
            android:id="@+id/PW_birthday_wish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_text"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:textColor="#4D4370"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ready_text"
            tools:text="nothing"
            />

        <ImageButton
            android:id="@+id/PW_add_image"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_purple"
            android:src="@drawable/ic_photo_camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_show_image"
            tools:ignore="ContentDescription"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:adjustViewBounds="true"
            />

        <ImageView
            android:id="@+id/PW_show_image"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_edittext"
            android:cropToPadding="true"
            android:scaleType="centerInside"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/picture_text"
            tools:ignore="ContentDescription"
            />

        <Button
            android:id="@+id/PW_generate_new_wish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button_purple"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/PW_generate_new_wish_button"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_birthday_wish"
            />

        <TextView
            android:id="@+id/picture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="@string/add_a_picture"
            android:textColor="#EEEEEE"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_change_settings_button"
            />

        <Button
            android:id="@+id/PW_change_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button_darkpurple"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/PW_change_settings_button"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_generate_new_wish_button"
            />

        <TextView
            android:id="@+id/email_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:text="@string/enter_recipient_s_email"
            android:textColor="#EEEEEE"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_add_image"
            />

        <EditText
            android:id="@+id/PW_their_email"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_title_text"
            android:textColor="#4D4370"
            android:textCursorDrawable="@null"
            tools:ignore="Autofill"
            />

        <Button
            android:id="@+id/PW_send_wish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_button_darkpurple"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/send_wish_btn"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PW_their_email"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>